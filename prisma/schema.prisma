datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  fullName  String
  nationalId String  @unique
  phone     String   @unique
  permits   Permit[]
  reports   Report[]
  createdAt DateTime @default(now())
}

model ProtectedArea {
  id          String   @id @default(cuid())
  name        String
  region      String
  zoneType    String   // "GREEN" | "YELLOW" | "RED"
  description String?
  permits     Permit[]
  reports     Report[]
  createdAt   DateTime @default(now())
}

model Permit {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  protectedAreaId String
  protectedArea ProtectedArea @relation(fields: [protectedAreaId], references: [id])
  type          String   // "VISIT" | "GRAZING"
  visitDate     DateTime
  durationHours Int?
  livestockCount Int?
  status        String   @default("PENDING") // "PENDING" | "APPROVED" | "REJECTED"
  qrCode        String   @unique @default(cuid())
  createdAt     DateTime @default(now())
}

model Report {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  protectedAreaId String?
  protectedArea   ProtectedArea? @relation(fields: [protectedAreaId], references: [id])
  lat             Float?
  lng             Float?
  description     String
  imageUrl        String?
  status          String   @default("NEW") // "NEW" | "IN_PROGRESS" | "CLOSED"
  createdAt       DateTime @default(now())
}
